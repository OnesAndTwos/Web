@using OnesAndTwos.Web.NavigationRoutes

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        @RenderSection("Head", required: false)
        @Styles.Render("~/CSS/Framework")
        @Styles.Render("~/CSS/Site")
        @Html.Partial("_Html5Shiv")
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    </head>
    <body>
        <!-- HEADER -->
        <header>
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <a class="brand" href="/" title="change in _bootstrapLayout.basic.cshtml">OnesAndTwos</a>
                        <div class="nav-collapse collapse">
                            <ul class="nav">
                                @Html.Navigation()
                            </ul>
                        </div>
                    </div>
                </div>
            </div>     
        </header>
        <!-- HEADER -->
        <!-- MAIN -->
        <div class="container">
            @Html.Partial("_Alerts")
            @Html.Partial("_ValidationSummary")
            @RenderBody()   
            <hr>
            <!-- FOOTER -->
            <footer>
                <p>&copy; Michael Kay @DateTime.Now.ToString("yyyy")</p>
            </footer>
            <!-- FOOTER -->
        </div>
        <!-- MAIN -->
        @Scripts.Render("~/JS/Framework")
        @RenderSection("Scripts", required: false)
    </body>
</html>
